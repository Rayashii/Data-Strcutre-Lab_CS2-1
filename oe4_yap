import java.util.*;

public class oe4_yap {
    public static void main(String[] args){
      Scanner input = new Scanner(System.in);
        ArrayList<Integer> sortingArray = new ArrayList<>();

        // how many
        System.out.print("Enter the number of integers to be sorted: ");
        int howMany = input.nextInt();
        int[] inputArray = new int[howMany];

        // user input
        System.out.println("Enter " + howMany + " elements: ");
        int counter = 0;
        for (int i = 0; i < inputArray.length; i++) {
            counter = counter + 1;
            System.out.print("Element #"+ counter +": ");
            int element = inputArray[i] = input.nextInt();
            sortingArray.add(element);
        }
        // not sorted
        System.out.println("Not sorted: "+sortingArray);

        // sorted
        Collections.sort(sortingArray);
        System.out.println("Sorted: "+sortingArray);

        // min value
        int minValue = Collections.min(sortingArray);
        System.out.println("Min value: "+minValue);

        // max value
        int maxValue = Collections.max(sortingArray);
        System.out.println("Max value: "+maxValue);
    }
  }

